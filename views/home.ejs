<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container mt-5 row cols-2">
      <div class="row">
        <% blogs.forEach(blog => { %>
          <div class="col-md-4">
            <div class="card mb-4">
              <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover">
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include("./partials/scripts.ejs") %>
  </body>
</html>
